<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backg"
    tools:context="com.cgpacalc.ummehabiba.cgpacalculator.SplashActivity">
    
    <ImageView
        android:id="@+id/splashIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/splashicon"

        android:layout_centerInParent="true"
        />


    <TextView
        android:id="@+id/tvsplash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CGPA Calculator"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="381dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="35sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(National University)"
        android:textColor="#201d1d"
        android:textStyle="italic"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tvsplash"
        android:textSize="25sp"/>

</RelativeLayout>
